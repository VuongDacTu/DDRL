@model PJ_DDRL.Models.DDRLModels.AccountStudent;
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Login information";
    Layout = "~/Areas/Student/Views/Shared/_LayoutStudent.cshtml";
}

<style>
    form {
        border: 1px solid #ccc;
        border-radius: 5px;
        background: #ccc;
        padding: 1rem;
    }
</style>

@{
    var ss = HttpContextAccessor.HttpContext.Session.GetString("StudentLogin");
    if ( ss != null)
    {
        <div>
            <h2 class="text-center my-2 py-2">Welcome to, @ViewBag.Student.UserName</h2>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center my-2 py-2">LOGIN STUDENT INFORMATION</h2>
                <form asp-action="Index" asp-controller="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Email/UserName</label>
                        <input type="text" class="form-control" id="UserOrEmail" asp-for="UserName" placeholder="Mã sinh viên" />
                        <span asp-validation-for=UserName class="fas fa-envelope"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" asp-for="Password"/>
                        <span asp-validation-for=Password class="fas fa-envelope"></span>
                    </div>
                    <!-- submit button -->
                    <input type="hidden" name="urlAction" value="@ViewBag.UrlAction" />
                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                    <span style="color:red">@TempData["errorLogin"]</span>
                </form>
            </div>
        </div>
    }
}